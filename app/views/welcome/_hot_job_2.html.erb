
<div class="row" style="margin:30px 15px 30px;">
  <% @jobs.where(:is_hot=>true).recent.limit(12).each do |job|%>
  <div class="col-sm-2 col-xl-2 col-xs-4 job-contain" >
    <% if job.logo.present?%>
      <%=image_tag(job.logo.thumb.url,class:"img-responsive")%>
    <%else%>
      <%= image_tag("http://placehold.it/200x200&text=No Pic") %>
    <%end%>
    <div class="job-content">
      <h4><%=job.company_name%></h4>
      <hr>
      <p><%=job.slogan.strip[0...20]%></p>
      <%=link_to '立即查看',job_path(job)%>
    </div>
  </div>
  <% end %>
</div>
