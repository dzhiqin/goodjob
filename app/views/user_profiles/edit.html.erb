<div class="container">
  <div class="resume">
    <header class="page-header">
      <h1 class="page-title">编辑简历</h1>
      <small><i class="fa fa-clock-o"></i>Last updated on:<time><%=@user_profile.updated_at%></time></small>
    </header>
    <div class="row">
      <%=simple_form_for @user_profile do |f|%>
      <div class="col-xs-12 col-sm-12  col-md-10 col-md-offset-1 col-lg-offset-2 col-lg-8">
        <div class="panel panel-default">
          <div class="panel-heading resume-heading">
            <div class="row">
              <div class="col-lg-12">
                <div class="col-xs-12 col-sm-4">
                  <figure>
                    <%if @user_profile.avatar.present?%>
                      <img class="img-circle img-responsive" alt="" src=<%=@user_profile.avatar.url%>>
                    <%else%>
                      <img class="img-circle img-responsive" alt="" src="http://placehold.it/300x300">
                    <%end%>

                  </figure>
                  <div class="row">
                    <div class="col-xs-12 social-btns">
                      <%=f.input :avatar , as: :file,:label=>"更改头像"%>
                    </div>

                  </div>
                </div>
                <div class="col-xs-12 col-sm-8">
                  <ul class="list-group">
                    <li class="list-group-item" style="font-family:'Tohoma';">
                      <%=f.label :name,"姓名 "%>
                      <%=f.text_field :name%>
                    </li>
                    <li class="list-group-item">
                      <%=f.label :position_applied,"应聘职位 "%>
                      <%=f.text_field :position_applied,:size=>"30"%>
                    </li>

                    <li class="list-group-item"><i class="fa fa-phone"></i>
                      <%=f.text_field :phone,:placeholder=>"电话号码",:size=>"30"%>
                    </li>
                    <li class="list-group-item"><i class="fa fa-envelope"></i>
                      <%=f.email_field :email,:placeholder=>"邮箱",:size=>"30"%>
                    </li>
                    <li class="list-group-item"><i class="fa fa-facebook"></i>
                      <%=f.text_field :facebook,:placeholder=>"输入facebook网址点亮图标",:size=>"30"%>
                    </li>
                    <li class="list-group-item"><i class="fa fa-linkedin"></i>
                      <%=f.text_field :linkedin,:placeholder=>"输入linkedin网址点亮图标",:size=>"30"%>
                    </li>
                    <li class="list-group-item"><i class="fa fa-twitter"></i>
                      <%=f.text_field :twitter,:placeholder=>"输入twitter网址点亮图标",:size=>"30"%>
                    </li>
                    <li class="list-group-item"><i class="fa fa-weixin"></i>
                      <%=f.text_field :weixin,:placeholder=>"weixin/无则不填",:size=>"30"%>
                    </li>
                    <li class="list-group-item"><i class="fa fa-rss"></i>
                      <%=f.text_field :blog,:placeholder=>"输入blog点亮图标",:size=>"30"%>
                    </li>
                    <li class="list-group-item"><i class="fa fa-stack-overflow"></i>
                      <%=f.text_field :stackoverflow,:placeholder=>"输入stackoverflow网址点亮图标",:size=>"30"%>
                    </li>
                    <li class="list-group-item"><i class="fa fa-github"></i>
                      <%=f.text_field :github,:placeholder=>"输入github网址点亮图标",:size=>"30"%>
                    </li>

                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="bs-callout bs-callout-danger">
          <h4>自我介绍</h4>
          <p>
            <%=f.text_area :introduction,:class=>"form-control"%>
          </p>

        </div>
        <div class="bs-callout bs-callout-danger">
          <h4>相关技能</h4>
          <p>
            <%=f.text_area :research_interests,:class=>"form-control"%>
          </p>
        </div>

        <div class="bs-callout bs-callout-danger">
          <h4>工作经验</h4>
          <%=f.text_area :prior_experience,:class=>"form-control"%>
        </div>

        <div class="bs-callout bs-callout-danger">
          <h4>教育经历</h4>
          <%=f.text_area :education,:class=>"form-control"%>
        </div>
        <%=f.submit "更新简历",class:"btn btn-primary"%>
        <%=link_to "预览简历",user_profile_path,class:"btn btn-success"%>
      </div>
      <%end%>
    </div>
  </div>

</div>
