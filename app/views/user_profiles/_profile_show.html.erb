<div class="container">
  <div class="resume">
    <header class="page-header">
      <h1 class="page-title"><%=user_profile.name%>的简历</h1>
      <small><i class="fa fa-clock-o"></i>Last updated on:<time><%=user_profile.updated_at.strftime('%F %T')%></time></small>
    </header>
    <div class="row">
      <div class="col-xs-12 col-sm-12  col-md-10 col-md-offset-1 col-lg-offset-2 col-lg-8">
        <div class="panel panel-default">
          <div class="panel-heading resume-heading">
            <div class="row">
              <div class="col-lg-12">
                <div class="col-xs-12 col-sm-4">
                  <figure>
                    <%if user_profile.avatar.present?%>
                      <img class="img-circle img-responsive" alt="" src="<%=user_profile.avatar.url%>">
                    <%else%>
                      <img class="img-circle img-responsive" alt="" src="http://placehold.it/300x300">
                    <%end%>

                  </figure>
                  <div class="row">
                    <div class="col-xs-12 social-btns">
                      <%if user_profile.facebook.present?%>
                      <div class="col-xs-3 col-md-2 col-log-1 social-btn-holder">
                        <a href=<%=user_profile.facebook%> target="_blank" class="btn btn-social btn-block btn-facebook">
                          <i class="fa fa-facebook"></i>
                        </a>
                      </div>
                      <%end%>
                      <%if user_profile.blog.present?%>
                      <div class="col-xs-3 col-md-2 col-log-1 social-btn-holder">
                        <a href=<%=user_profile.blog%> target="_blank" class="btn btn-social btn-block btn-facebook">
                          <i class="fa fa-rss"></i>
                        </a>
                      </div>
                      <%end%>
                      <%if user_profile.twitter.present?%>
                      <div class="col-xs-3 col-md-2 col-log-1 social-btn-holder">
                        <a href='<%=user_profile.twitter%>' target="_blank"  class="btn btn-social btn-block btn-twitter">
                          <i class="fa fa-twitter"></i>
                        </a>
                      </div>
                      <% end %>

                      <%if user_profile.linkedin.present?%>
                      <div class="col-xs-3 col-md-2 col-log-1 social-btn-holder">
                        <a href='<%=user_profile.linkedin%>' target="_blank"  class="btn btn-social btn-block btn-twitter">
                          <i class="fa fa-linkedin"></i>
                        </a>
                      </div>
                      <% end %>
                      <%if user_profile.github.present?%>
                      <div class="col-xs-3 col-md-2 col-log-1 social-btn-holder">
                        <a href='<%=user_profile.github%>' target="_blank"  class="btn btn-social btn-block btn-twitter">
                          <i class="fa fa-github"></i>
                        </a>
                      </div>
                      <% end %>
                      <%if user_profile.stackoverflow.present?%>
                      <div class="col-xs-3 col-md-2 col-log-1 social-btn-holder">
                        <a href='<%=user_profile.stackoverflow%>' target="_blank"  class="btn btn-social btn-block btn-twitter">
                          <i class="fa fa-stack-overflow"></i>
                        </a>
                      </div>
                      <% end %>

                    </div>

                  </div>
                </div>
                <div class="col-xs-12 col-sm-8">
                  <ul class="list-group">
                    <li class="list-group-item"><i class="fa fa-user "></i> <%=user_profile.name%></li>
                    <li class="list-group-item"><i class="fa fa-search"></i> <%=user_profile.position_applied%></li>
                    <li class="list-group-item"><i class="fa fa-weixin"></i> <%=user_profile.weixin%></li>
                    <li class="list-group-item"><i class="fa fa-phone"></i> <%=user_profile.phone%></li>
                    <li class="list-group-item"><i class="fa fa-envelope"></i>
                      <%=user_profile.email%>
                    </li>
                  </ul>
                </div>
              </div>


            </div>
          </div>
        </div>
        <div class="bs-callout bs-callout-danger">
          <h4>自我介绍</h4>
          <p>
            <%= sanitize user_profile.introduction%>
          </p>

        </div>
        <div class="bs-callout bs-callout-danger">
          <h4>相关技能</h4>
          <p>
            <%= sanitize user_profile.research_interests%>
          </p>
        </div>

        <div class="bs-callout bs-callout-danger">
          <h4>工作经验</h4>
          <p><%= sanitize user_profile.prior_experience%></p>
        </div>



